// globalstyles styles
@font-face
    font-family: SpecialGothic
    src: url('font/SpecialGothicExpandedOne-Regular.ttf')
    font-weight: normal;
    font-style: normal;
    font-display: swap;


/*==========================================================
Color Theme
==========================================================*/
cd-foreground = black
cd-flash = purple
cd-background = white

/*==========================================================
Global Variables
==========================================================*/
max-content-width = 900px
mobile-side-padding = 15px


/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: SpecialGothic, sans-serif
    text-align: center
    font-size: 12pt
    height 100vh
    width 100%
    overflow hidden

h1
    font-size: 26pt
h2
    font-size: 15pt
p
    font-size: 12pt
